---
import { CopyButton } from "../common/CopyButton";
import { resolveDocsUrl } from "../../utils/urlResolver";
import { Target } from 'lucide-react';
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<div class="hero">
  <div
    class="absolute inset-x-0 top-50 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    aria-hidden="true"
  >
    <div
      class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[40rem] -translate-x-1/2 rotate-[70deg] opacity-15 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
      style={{
        background: "var(--excel-gradient)",
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 150%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
    >
    </div>

    <div
      class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[40rem] -translate-x-1/2 rotate-[70deg] opacity-15 sm:left-[calc(100%)] sm:w-[72.1875rem]"
      style={{
        background: "var(--excel-gradient)",
        clipPath:
          "polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 150%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)",
      }}
    >
    </div>
  </div>
  <div class="hero-content text-center min-h-[30rem] md:min-h-[40rem] font-outfit px-4 py-12 lg:py-20">
    <div class="max-w-2xl md:max-w-6xl w-full">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-black leading-tight" style="font-family: var(--font-brand);">
        <span class="text-primary relative">xldx<Target className="absolute -top-1 -right-6 sm:-right-8 md:-right-10 lg:-right-12 w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6 lg:w-8 lg:h-8 text-primary" /></span>
        <br/>
        <span class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-normal" style="font-family: var(--font-outfit);">JS Excel File Builder</span>
      </h1>
      <div class="flex justify-center items-center">
        <p class="mt-4 sm:mt-6 mb-6 sm:mb-8 max-w-4xl text-base sm:text-lg md:text-xl lg:text-2xl px-2">
          Create Excel files with advanced styling, theming, and pattern-based formatting.
          Zero dependencies, works in browsers and in bun, node, and deno.
        </p>
      </div>
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-5 w-full max-w-lg mx-auto">
        <a href={resolveDocsUrl("introduction")}>
          <button
            class="btn btn-lg btn-primary text-white border-0 hover:opacity-90 w-full sm:w-auto"
            >Get Started
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
            
            </button
          >
        </a>

          <div
            class="flex items-center bg-base-300 rounded-lg shadow-sm justify-between w-full sm:w-auto"
          >
              <svg
                width="22"
                height="13"
                viewBox="0 0 22 13"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                class="relative ml-4 mr-2 block w-3 -rotate-90"
              >
                <path d="M1 1L11 11L21 1" stroke="currentColor" stroke-Width="2"
                ></path>
              </svg>
              <code class="flex-1 text-left leading-none mr-4 text-sm sm:text-base">
                bun add xldx
              </code>
              <CopyButton client:only="react" />
          </div>

      </div>
    </div>
  </div>
</div>
