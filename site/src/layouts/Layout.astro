---
import SideBar from "../components/docs/SideBar.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import "@fontsource-variable/outfit";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="xldx - Excel file builder for TypeScript/JavaScript with zero dependencies." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poetsen+One&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <Header showSidebarToggle={true} />
      <div class="drawer lg:drawer-open flex-1 mt-0">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col mt-0 pt-0">
          <div class="flex-1">
            <slot />
          </div>
        </div>
        <SideBar />
      </div>
      <Footer />
    </div>
  </body>
</html>

<style>
  * {
    scroll-behavior: smooth;
  }
</style>
